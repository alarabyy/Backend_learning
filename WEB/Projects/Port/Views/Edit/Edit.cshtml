@model Port.Models.Order
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h1 class="mb-4 text-center">Edit Shipment</h1>
    <form asp-action="Edit" asp-controller="Edit" method="post" enctype="multipart/form-data">
        <!-- استخدام حقل مخفي لإرسال Id -->
        <input type="hidden" asp-for="OrderId" />

        <div class="row">
            <div class="col-md-6 animate__animated animate__fadeInLeft">
                <div class="form-group mb-3">
                    <label asp-for="OrderName" class="form-label">Order Name</label>
                    <input asp-for="OrderName" class="form-control" placeholder="Enter Order Name" />
                    <span asp-validation-for="OrderName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 animate__animated animate__fadeInRight">
                <div class="form-group mb-3">
                    <label asp-for="OrderDescription" class="form-label">Order Description</label>
                    <textarea asp-for="OrderDescription" class="form-control" rows="3" placeholder="Describe the order"></textarea>
                    <span asp-validation-for="OrderDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4 animate__animated animate__fadeInLeft">
                <div class="form-group mb-3">
                    <label asp-for="OrderPrice" class="form-label">Order Price</label>
                    <input asp-for="OrderPrice" class="form-control" placeholder="Enter Order Price" />
                    <span asp-validation-for="OrderPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4 animate__animated animate__fadeInUp">
                <div class="form-group mb-3">
                    <label asp-for="OrderQuantity" class="form-label">Order Quantity</label>
                    <input asp-for="OrderQuantity" class="form-control" placeholder="Enter Quantity" />
                    <span asp-validation-for="OrderQuantity" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4 animate__animated animate__fadeInRight">
                <div class="form-group mb-3">
                    <label asp-for="OrderDate" class="form-label">Order Date</label>
                    <input asp-for="OrderDate" class="form-control" type="date" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 animate__animated animate__fadeInLeft">
                <div class="form-group mb-3">
                    <label asp-for="OrderTime" class="form-label">Order Time</label>
                    <input asp-for="OrderTime" class="form-control" type="time" />
                    <span asp-validation-for="OrderTime" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 animate__animated animate__fadeInRight">
                <div class="form-group mb-3">
                    <label asp-for="OrderType" class="form-label">Order Type</label>
                    <input asp-for="OrderType" class="form-control" placeholder="Enter Order Type" />
                    <span asp-validation-for="OrderType" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center">

            <button type="submit" class="btn btn-primary btn-lg animate__animated animate__pulse animate__infinite">Save Changes</button>
        </div>
        @Html.EditorFor(e=>e.OrderName)
    </form>
</div>
