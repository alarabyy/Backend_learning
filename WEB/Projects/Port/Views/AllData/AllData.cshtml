@model IEnumerable<Port.Models.Order>

@{
    ViewData["Title"] = "AllData";
}

<div class="container mt-4">
    <h1 class="text-warning">All Orders</h1>

    <p>
        <a   asp-action="Create" asp-controller="Create" class="btn btn-success mb-3">Create New Order</a>
    </p>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>OrderName</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Order Date</th>
                <th>Order Time</th>
                <th>Type</th>
                <th>AllPrice</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var all = item.OrderPrice * item.OrderQuantity;
                <tr>

                    <td>@Html.DisplayFor(ItemTest=> item.OrderName)</td>
                    <td>@Html.DisplayFor(ItemTest=> item.OrderDescription)</td>
                    <td>@Html.DisplayFor(ItemTest=> item.OrderPrice)</td>
                    <td>@Html.DisplayFor(ItemTest => item.OrderQuantity)</td>
                    <td>@Html.DisplayFor(ItemTest=> item.OrderDate)</td>
                    <td>@Html.DisplayFor(ItemTest=> item.OrderTime)</td>
                    <td>@Html.DisplayFor(ItemTest=> item.OrderType)</td>
                    <td>@Html.DisplayFor(ItemTest => all)</td>

                    <td>

                        <a asp-action="Edit" asp-controller="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
