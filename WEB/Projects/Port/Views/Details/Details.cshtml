@model Port.Models.Order

@{
    ViewData["Title"] = "Invoice";
}

<div class="invoice-container">
    <div class="invoice-header">
        <h2 class="invoice-title ">Sales Invoice</h2>
        <p class="invoice-subtitle">Thank you for your purchase!</p>
    </div>

    <div class="invoice-details">
        <div class="invoice-info">
            <div>
                <strong>Invoice Number:</strong> @Html.DisplayFor(model => model.OrderId)
            </div>
            <div>
                <strong>Date:</strong> @Html.DisplayFor(model => model.OrderDate)
            </div>
            <div>
                <strong>Time:</strong> @Html.DisplayFor(model => model.OrderTime)
            </div>
        </div>

        <div class="customer-info">
            <div>
                <strong>Customer Name:</strong> @Html.DisplayFor(model => model.OrderName)
            </div>
            <div>
                <strong>Description:</strong> @Html.DisplayFor(model => model.OrderDescription)
            </div>
        </div>
    </div>

    <table class="invoice-table table table-warning table-hover">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.OrderType)</td>
                <td>@Html.DisplayFor(model => model.OrderQuantity)</td>
                <td>@Html.DisplayFor(model => model.OrderPrice)</td>
                <td>@(Model.OrderQuantity * Model.OrderPrice)</td>
            </tr>
        </tbody>
    </table>

    <div class="invoice-footer">
        <h4>Total Price: $@(Model.OrderQuantity * Model.OrderPrice)</h4>
        <p class="thanks-message">We appreciate your business!</p>
    </div>
</div>
