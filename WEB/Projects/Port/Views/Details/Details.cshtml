@*****************************************************************************@

<!-- Styles for Invoice Design -->
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color : bisque;
      
    }

    .invoice-container {
        max-width: 800px;
        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
    }

    .invoice-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .invoice-title {
        font-size: 2.5rem;
        color: darkorange;
    }

    .invoice-subtitle {
        font-size: 1.2rem;
        color: #6c757d;
    }

    .invoice-details {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .invoice-info, .customer-info {
        width: 48%;
    }

        .invoice-info div, .customer-info div {
            margin-bottom: 10px;
        }

    .invoice-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
    }

        .invoice-table th, .invoice-table td {
            border: 1px solid #dee2e6;
            padding: 12px 15px;
            text-align: center;
        }

        .invoice-table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

    .invoice-footer {
        text-align: center;
        margin-top: 20px;
    }

        .invoice-footer h4 {
            font-size: 1.5rem;
            color: #343a40;
        }

    .thanks-message {
        font-style: italic;
        color: #6c757d;
    }
</style>
