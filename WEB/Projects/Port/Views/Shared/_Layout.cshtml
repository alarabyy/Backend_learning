<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Port</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/Port.styles.css" asp-append-version="true" />
    <link rel="icon" href="/img/shop_market_icon_264199 (2).ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>

    @* ///////////////////////////////////////////////////////////////// *@

    @* @Html.Partial("_NavPartial"); *@
    @await Html.PartialAsync("_NavPartial");

    @* ///////////////////////////////////////////////////////////////// *@

    <div class="container animate__animated animate__fadeInDown">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr />
    @* ///////////////////////////////////////////////////////////////// *@

    <partial name="_FooterPartial"/>

    @* ///////////////////////////////////////////////////////////////// *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>