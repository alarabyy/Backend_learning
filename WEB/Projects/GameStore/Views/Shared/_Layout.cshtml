<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameStore </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="~/css/bootstrap.min (3).css" rel="stylesheet" />
	<link href="~/select2/css/select2.min.css" rel="stylesheet" />
	<link href="~/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/GameStore.styles.css" asp-append-version="true" />
    <link rel="icon" href="./shopping-bag.png" />
</head>
<body class="fw-bold">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid mx-4">
				<img src="~/shopping-bag.png" />
                <a class="navbar-brand fw-bold ">GameStore</a>
                <h1><button class="navbar-toggler text-capitalize fw-bold font-monospace" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                </h1>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item">
                            <a class="nav-link btn-outline-dark border-light text-light m-2" style="border-radius: 15px;"  asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-outline-dark border-light text-light m-2" style="border-radius: 15px;" asp-controller="Games" asp-action="Create">Create</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-outline-dark border-light text-light m-2" style="border-radius: 15px;" asp-controller="Games" asp-action="Index">Games</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-4" style="margin-bottom:100px;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary fw-bold">
        <div class="container fw-bold">
            &copy; 2024 - GameStore - Mohamed-Alaraby
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/select2/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
